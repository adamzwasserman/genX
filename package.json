{
  "name": "@genx/core",
  "version": "1.0.0-alpha.1",
  "description": "Declarative web development platform - enhance HTML with powerful functionality through simple attributes",
  "main": "dist/bootloader.js",
  "module": "dist/bootloader.esm.js",
  "unpkg": "dist/bootloader.min.js",
  "jsdelivr": "dist/bootloader.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:bootloader && npm run build:modules && npm run minify && npm run gzip",
    "build:bootloader": "esbuild src/bootloader.js --bundle --outfile=dist/bootloader.js --format=iife --global-name=genx",
    "build:modules": "esbuild src/fmtx.js src/accx.js src/bindx.js src/dragx.js src/loadx.js src/navx.js src/tablex.js src/smartx.js --outdir=dist/modules --format=iife",
    "minify": "npm run minify:bootloader && npm run minify:modules",
    "minify:bootloader": "terser dist/bootloader.js -o dist/bootloader.min.js --compress --mangle",
    "minify:modules": "for f in dist/modules/*.js; do if [[ ! \"$f\" == *.min.js ]]; then terser \"$f\" -o \"${f%.js}.min.js\" --compress --mangle; fi; done",
    "gzip": "npm run gzip:bootloader && npm run gzip:modules",
    "gzip:bootloader": "gzip -9 -k -f dist/bootloader.min.js",
    "gzip:modules": "for f in dist/modules/*.min.js; do gzip -9 -k -f \"$f\"; done",
    "dev": "python3 -m http.server 8080",
    "test": "npm run test:unit && npm run test:bdd",
    "test:unit": "jest --config config/jest.config.js tests/unit",
    "test:browser": "playwright test --config config/playwright.config.js",
    "test:bdd": "cucumber-js --config config/cucumber.js",
    "test:bdd:base": "cucumber-js --config config/cucumber.js --profile base-safety",
    "test:bdd:mutations": "cucumber-js --config config/cucumber.js --profile mutation-safety",
    "test:bdd:performance": "cucumber-js --config config/cucumber.js --profile performance",
    "test:bdd:security": "cucumber-js --config config/cucumber.js --profile security",
    "test:bdd:features": "cucumber-js --config config/cucumber.js --profile module-features",
    "test:integration": "jest --config config/jest.config.js tests/integration",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:browser && npm run test:bdd",
    "test:critical": "npm run test:unit && cucumber-js --config config/cucumber.js --profile ci",
    "lint": "eslint --config config/.eslintrc.json src/**/*.js",
    "format": "prettier --config config/.prettierrc --write src/**/*.js",
    "size": "npm run build && size-limit",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genx-software/genx.git"
  },
  "keywords": [
    "declarative",
    "html",
    "attributes",
    "accessibility",
    "formatting",
    "wcag",
    "aria",
    "a11y",
    "progressive-enhancement",
    "framework-agnostic",
    "vanilla-js",
    "web-components",
    "no-framework"
  ],
  "author": "genX Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/genx-software/genx/issues"
  },
  "homepage": "https://genx.software",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/register": "^7.28.3",
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.56.1",
    "@size-limit/preset-small-lib": "^11.0.0",
    "babel-jest": "^30.2.0",
    "chai": "^6.2.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.1.0",
    "size-limit": "^11.0.0",
    "terser": "^5.44.1"
  },
  "size-limit": [
    {
      "name": "Bootloader",
      "path": "dist/bootloader.min.js",
      "limit": "5 KB",
      "gzip": true
    },
    {
      "name": "FormatX Module",
      "path": "dist/modules/fmtx.min.js",
      "limit": "15 KB",
      "gzip": true
    },
    {
      "name": "AccessX Module",
      "path": "dist/modules/accx.min.js",
      "limit": "20 KB",
      "gzip": true
    },
    {
      "name": "BindX Module",
      "path": "dist/modules/bindx.min.js",
      "limit": "25 KB",
      "gzip": true
    },
    {
      "name": "DragX Module",
      "path": "dist/modules/dragx.min.js",
      "limit": "25 KB",
      "gzip": true
    },
    {
      "name": "LoadX Module",
      "path": "dist/modules/loadx.min.js",
      "limit": "20 KB",
      "gzip": true
    },
    {
      "name": "NavX Module",
      "path": "dist/modules/navx.min.js",
      "limit": "20 KB",
      "gzip": true
    },
    {
      "name": "TableX Module",
      "path": "dist/modules/tablex.min.js",
      "limit": "20 KB",
      "gzip": true
    },
    {
      "name": "SmartX Module",
      "path": "dist/modules/smartx.min.js",
      "limit": "10 KB",
      "gzip": true
    }
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
